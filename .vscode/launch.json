    "version": "0.2.0",
    "configurations": [
       
        { 
            "name": "Compress debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/huffman",
            "args": ["-c","test.txt"],
            "MIMode": "gdb",
            "cwd": "/root/Huffman-Coding",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build"
        },
        { 
            "name": "Extract debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/huffman",
            "args": ["-e","huffman.bin"],
            "cwd": "/root/Huffman-Coding",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build"
        },
    ]   
}